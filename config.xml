<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.dure0018.myApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>giftr Dure0018</name>
    <description>
       MAD9022 MidTerm - Giftr
    </description>
    <author email="dure0018@algonquinlive.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name = "SlashScreen" value="screen" />
    <preference name = "SlashScreenDelay" value="5000" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screens/android/splash-land-hdpi.png" density="land-hdpi"/>
    <splash src="res/screens/android/splash-land-ldpi.png" density="land-ldpi"/>
    <splash src="res/screens/android/splash-land-mdpi.png" density="land-mdpi"/>
    <splash src="res/screens/android/splash-land-xhdpi.png" density="land-xhdpi"/>

    <splash src="res/screens/android/splash-port-hdpi.png" density="port-hdpi"/>
    <splash src="res/screens/android/splash-port-ldpi.png" density="port-ldpi"/>
    <splash src="res/screens/android/splash-port-mdpi.png" density="port-mdpi"/>
    <splash src="res/screens/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        
    <icon density = "ldpi" src="res/icons/icon-36-ldpi.png" />  
    <icon density = "ldpi" src="res/icons/icon-48-mdpi.png" />  
    <icon density = "ldpi" src="res/icons/icon-72-hdpi.png" />  
    <icon density = "ldpi" src="res/icons/icon-96-xhdpi.png" />  
    <icon density = "ldpi" src="res/icons/icon-144-xxhdpi.png" />  
    <icon density = "ldpi" src="res/icons/icon-192-xxxhdpi.png" />  
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
